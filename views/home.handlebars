<div class="hero">
  <a
    href="#AllProducts"
    class="btn btn-outline-dark"
    aria-current="page"
    id="productbtn"
  >View Products</a>
</div>
<h2 id="featured">Feature Products</h2>
  <div class="bg-col-white">
    <div class="container text-center">
      <!-- <h1 class="current-page-text">RECENTLY ADDED</h1> -->
      <div class="row parent-row-image-only">
        <!---EACH INDIVIDUAL ITEM STARTS HERE (limit product 4)-->
        {{#each (limit products 7)}}
          {{#if featured}}
          <div
            class="col-lg-2 col-md-4 col-sm-6 product-container2"
            style="margin-bottom: 20px;">
            <div class="row">
              <div class="col product-overview">
                <div class="prod-image-box">
                  <a href="/product/{{this.id}}"><img
                      class="product-image-sizing"
                      src="{{this.image}}"
                      alt="{{this.product_name}}"
                    /></a>
                </div>
                <a
                  href="/product/{{this.id}}"
                  style="text-decoration: none; color: black;"
                ><h2
                    class="product-title2"
                    id="fttitle"
                  >{{this.product_name}}</h2></a>
                <p class="product-price">£{{this.price}}</p>
                <button id="main-cart" data-id="{{this.id}}" type="submit" class="btn btn-dark btn-styling2">Add to
                  Cart</button>
              </div>
            </div>
          </div>
          {{/if}}
        {{/each}}
        <!---EACH INDIVIDUAL ITEM ENDS HERE-->
      </div>
    </div>
  </div>

<h2 id="AllProducts">All Products</h2>
<div class="bg-col-white">
  <div class="container text-center">
    <div class="row parent-row-image-only">
      <!---EACH INDIVIDUAL ITEM STARTS HERE-->
      {{#each products as |product|}}
        <div
          class="col-lg-2 col-md-4 col-sm-6 product-container2"
          style="margin-bottom: 20px;"
          id="ftproduct"
        >
          <div class="row">
            <div class="col product-overview">
              <div class="prod-image-box">
                <a href="/product/{{product.id}}"><img
                    class="product-image-sizing"
                    src="{{product.image}}"
                    alt="{{product.product_name}}"
                  /></a>
              </div>

              <a
                href="/product/{{product.id}}"
                style="text-decoration: none; color: black;"
              ><h2
                  class="product-title2"
                  id="fttitle"
                >{{product.product_name}}</h2></a>
              <p class="product-price">£ {{product.price}}</p>
              <input id="user-id" type="hidden" value="{{product.user_id}}">
              <button data-id="{{product.id}}" type="submit" class="btn btn-dark btn-styling2">Add to
                Cart</button>
            </div>
          </div>
        </div>
      {{/each}}
      <!---EACH INDIVIDUAL ITEM ENDS HERE-->
    </div>
  </div>
</div>

<script src="/js/home.js"></script>